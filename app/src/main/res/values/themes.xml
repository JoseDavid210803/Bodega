<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Bodega" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/my_primary</item>
        <item name="colorPrimaryVariant">@color/my_primary</item>

        <item name="colorSecondary">@color/my_secundary</item>
        <item name="colorSecondaryVariant">@color/my_secundary</item>

        <item name="android:statusBarColor">@color/my_primary</item>
    </style>

    <style name="Theme.Bodega" parent="Base.Theme.Bodega" />

    <style name="Theme.Bodega.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Bodega.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Bodega.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>